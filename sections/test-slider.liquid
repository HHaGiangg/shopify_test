<!-- slider section -->
<section class="slider_section ">
    <div class="slider_bg_box">
        <img src="{{section.settings.image_background | img_url:'master'}}"/>
    </div>
    <div id="customCarousel1" class="carousel slide" data-ride="carousel">
       <div class="carousel-inner">
        {% for block in section.blocks %}
        {% assign position = forloop.index0 %}
          <div class="carousel-item {% if position == 0 %} active {% endif%}">
             <div class="container ">
                <div class="row">
                   <div class="col-md-7 col-lg-6 ">
                      <div class="detail-box">
                         <h1>
                            <span>{{block.settings.title}}</span>
                            {{block.settings.name}}
                         </h1>
                         <p>
                            {{block.settings.content}}    
                        </p>
                         <div class="btn-box">
                            <a href="{{block.settings.button_link}}" class="btn1">
                                {{block.settings.button_name}}   
                            </a>
                         </div>
                      </div>
                   </div>
                </div>
             </div>
          </div>
        {% endfor %}
       </div>
       <div class="container">
          <ol class="carousel-indicators">
             <li data-target="#customCarousel1" data-slide-to="0" class="active"></li>
             <li data-target="#customCarousel1" data-slide-to="1"></li>
             <li data-target="#customCarousel1" data-slide-to="2"></li>
          </ol>
       </div>
    </div>
 </section>
 <!-- end slider section -->

 {% schema %}
  {
    "name": "Test slider",
    "settings": [
        {
            "type": "image_picker",
            "label" : "image_background",
            "id": "image_background"
        }
    ],
    "blocks": [
        {
            "type":"slider",
            "name":"Slider",
            "settings": [
                {
                    "type": "richtext",
                    "label" : "Title",
                    "id": "title"
                },
                {
                    "type": "richtext",
                    "label" : "Name",
                    "id": "name"
                },
                {
                    "type": "richtext",
                    "label" : "Content",
                    "id": "content"
                },
                {
                    "type": "text",
                    "label" : "Button name",
                    "id": "button_name"
                },
                {
                    "type": "url",
                    "label" : "Link",
                    "id": "button_link"
                }
            ]
            
        }
    ],
    "presets": [
        {
            "name": "Test slider"
        }
    ]
  }
{% endschema %}