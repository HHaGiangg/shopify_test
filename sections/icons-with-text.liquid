<h3>{{section.settings.heading}}</h3>
<p>{{section.settings.description}}</p>

{%for block in section.blocks %}
  <img src="{{block.settings.image | img_url:'master'}}"/>
{%endfor%}

{% schema %}
  {
    "name": "icons with text",
    "settings": [
                  {
                      "type":"text",
                      "label" : " ABCD text",
                      "id":"heading"
                  },
                  {
                      "type":"richtext",
                      "label" : " ABCD description",
                      "id":"description"
                  }
    ],
     "blocks": [
                {
                    "type":"image",
                    "name":"image block",
                    "settings": [
                                  {
                                    "type":"image_picker",
                                    "label": "yout image",
                                    "id":"image"
                                  }
                    ]
                }
     ],
      "presets": [
                    {
                  "category":"image",
                   "name":"icons with text"
                    }
      ]
  }
{% endschema %}

